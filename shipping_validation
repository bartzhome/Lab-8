
city = input ( "Please enter city and province: " )
postal = input ( "Please enter a postal code: " )


if postal[0].isalpha() and postal[1].isdecimal() and postal[2].isalpha()\
   and postal[3].isspace() and postal[4].isdecimal() and postal[5].isalpha() \
   and postal[6].isdecimal():
     valid_postal = True
else:
     valid_postal = False
     error_message = ("Your postal code is incorrect")
     

test  = city.split(",")
a,b = city.split (",")


if  b.upper() in ("AB","BC","MB","NB","NL","NT","NS","NU","ON","PE","QC","SK","YT"):
     valid_province = True
else:
     valid_province = False
     error_message = ("I'm sorry, " + str(b) + " is an invalid province abbreviation.")

if b.upper() in "AB" and postal[0].upper() in "T":
     valid_code = True
elif b.upper() in "BC" and postal[0].upper() in "V":
     valid_code = True
elif b.upper() in "MB" and postal[0].upper() in "R":
     valid_code = True
elif b.upper() in "NB" and postal[0].upper() in "E":
     valid_code = True
elif b.upper() in "NL" and postal[0].upper() in "A":
     valid_code = True
elif  b.upper() in "NT" and postal[0].upper() in "X":
     valid_code = True
elif b.upper() in "NS" and postal[0].upper() in "B":
     valid_code = True
elif b.upper() in "NU" and postal[0].upper() in "X":
     valid_code = True
elif b.upper() in "ON" and  postal[0] in "KLMNP":
     valid_code = True
elif b.upper() in "PE" and postal[0].upper() in "C":
     valid_code = True
elif b.upper() in "QC" and postal[0].upper() in "GHJ":
     valid_code = True
elif b.upper() in "SK" and postal[0].upper() in "S":
     valid_code = True
elif b.upper() in "YT" and postal[0].upper() in "Y":
     valid_code = True
else:
     valid_code = False
     error_message = ( "I'm sorry, no postal codes in" + str(b) + "start with" + str ( postal )  )

if valid_postal and valid_province and valid_code:
     print ( "Your input was correct" )
else:
     print ( error_message )



